<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd">

  <!-- UTF8 module bean -->
	<bean id="UTF8Module" class="org.jhove2.module.format.utf8.UTF8"
		scope="prototype">
		<constructor-arg ref="UTF8Format" /> <!-- format -->
		<property name="profiles">
			<list value-type="org.jhove2.core.FormatProfileComponent">
				<ref bean="ASCIIProfile" />
			</list>
		</property>
	</bean>
   
 <!-- UTF8 Format bean -->
	<bean id="UTF8Format" class="org.jhove2.core.Format">
      <constructor-arg type="java.lang.String" value="UTF-8"/>                       <!-- name  -->
      <constructor-arg ref="identifierUTF8Format"/>                                  <!-- identifier -->
      <constructor-arg type="org.jhove2.core.Format$Type" value="Family"/>           <!-- type  -->
      <constructor-arg type="org.jhove2.core.Format$Ambiguity" value="Unambiguous"/> <!-- ambiguity  -->
	<property name="aliasIdentifiers">
		<set value-type="org.jhove2.core.Identifier">
			<ref bean="aliasIdUTF8UTI" />
			<ref bean="aliasIdUTF8Mime" />
			<ref bean="aliasIdUTF8Charset" />
		</set>
	</property>
	<property name="specifications">
		<list value-type="org.jhove2.core.Document">
			<ref bean="specUTF8Authoritative" />
			<ref bean="specUTF8Inform01" />
			<ref bean="specUTF8Inform02" />
		</list>
	</property>
	</bean>
	
   <!-- UTF8 Format identifier -->  
   <bean id="identifierUTF8Format" class="org.jhove2.core.Identifier" >
      <constructor-arg type="java.lang.String" value="info:jhove2/format/utf-8"/> <!--  value  -->
   </bean>
   
   <!-- UTF8 alias identifiers -->
   <bean id="aliasIdUTF8UTI" class="org.jhove2.core.Identifier" >
      <constructor-arg type="java.lang.String" value="public.utf8-plain-text"/>
      <constructor-arg type="org.jhove2.core.Identifier$Namespace" value="UTI"/>
   </bean>
   <bean id="aliasIdUTF8Mime" class="org.jhove2.core.Identifier" >
      <constructor-arg type="java.lang.String" value="text/plain; charset=UTF-8"/>
      <constructor-arg type="org.jhove2.core.Identifier$Namespace" value="MIME"/>
   </bean>
   <bean id="aliasIdUTF8Charset" class="org.jhove2.core.Identifier" >
      <constructor-arg type="java.lang.String" value="UTF-8"/>
      <constructor-arg type="org.jhove2.core.Identifier$Namespace" value="Charset"/>
   </bean>

   <!-- UTF8 Document specifications -->
   <bean id="specUTF8Authoritative" class="org.jhove2.core.Document">
      <constructor-arg index="0" type="java.lang.String" value="The Unicode 5.0 Standard"/>
      <constructor-arg index="1" type="org.jhove2.core.Document$Type" value="Standard"/>
      <constructor-arg index="2" type="org.jhove2.core.Document$Intention" value="Authoritative"/>
      <property name="author" value="Unicode Consortium"/>
      <property name="edition" value="Version 5.1.0"/>
      <property name="publisher" value="Addison-Wesley"/>
      <property name="date" value="2007"/>
     <property name="identifiers">
         <list value-type="org.jhove2.core.Identifier">
            <ref bean="specIdUTF8URL"/>
            <ref bean="specIdUTF8DDC"/>
            <ref bean="specIdUTF8LCC"/>
         </list>
      </property>
   </bean>  

   <bean id="specUTF8Inform01" class="org.jhove2.core.Document">
      <constructor-arg index="0" type="java.lang.String" value="Information technology -Universal Multiple-Octet Coded Character Set (UCS)"/>
      <constructor-arg index="1" type="org.jhove2.core.Document$Type" value="Standard"/>
      <constructor-arg index="2" type="org.jhove2.core.Document$Intention" value="Informative"/>
      <property name="publisher" value="Addison-Wesley"/>
      <property name="date" value="2007"/>
      <property name="identifier" ref="specIdUTF8ISO"/>
   </bean> 

   <bean id="specUTF8Inform02" class="org.jhove2.core.Document">
      <constructor-arg index="0" type="java.lang.String" value="UTF-8, a transformation format of ISO 10646"/>
      <constructor-arg index="1" type="org.jhove2.core.Document$Type" value="Standard"/>
      <constructor-arg index="2" type="org.jhove2.core.Document$Intention" value="Informative"/>
      <property name="author" value="Yergeau, F"/>
      <property name="publisher" value="IETF"/>
      <property name="date" value="November 2003"/>
      <property name="identifiers">
         <list value-type="org.jhove2.core.Identifier">
            <ref bean="specIdUTF8IETFRFC"/>
            <ref bean="specIdUTF8IETFURL"/>
         </list>
      </property>
   </bean>

   <!-- UTF8 specification identifiers -->
   <bean id="specIdUTF8URL" class="org.jhove2.core.Identifier" >
      <constructor-arg type="java.lang.String" value="http://www.unicode.org/versions/Unicode5.1.0/"/>
      <constructor-arg type="org.jhove2.core.Identifier$Namespace" value="URL"/>
   </bean>
   <bean id="specIdUTF8DDC" class="org.jhove2.core.Identifier" >
      <constructor-arg type="java.lang.String" value="005.7'22-dc22"/>
      <constructor-arg type="org.jhove2.core.Identifier$Namespace" value="DDC"/>
   </bean>
   <bean id="specIdUTF8LCC" class="org.jhove2.core.Identifier" >
      <constructor-arg type="java.lang.String" value="QA268.U545 2007"/>
      <constructor-arg type="org.jhove2.core.Identifier$Namespace" value="LCC"/>
   </bean>  
   <bean id="specIdUTF8ISO" class="org.jhove2.core.Identifier" >
      <constructor-arg type="java.lang.String" value="ISO 10646:2003"/>
      <constructor-arg type="org.jhove2.core.Identifier$Namespace" value="ISO"/>
   </bean>  
   <bean id="specIdUTF8IETFRFC" class="org.jhove2.core.Identifier" >
      <constructor-arg type="java.lang.String" value="RFC 3629"/>
      <constructor-arg type="org.jhove2.core.Identifier$Namespace" value="RFC"/>
   </bean>
   <bean id="specIdUTF8IETFURL" class="org.jhove2.core.Identifier" >
      <constructor-arg type="java.lang.String" value="http://www.ietf.org/rfc/rfc3629.txt"/>
      <constructor-arg type="org.jhove2.core.Identifier$Namespace" value="URL"/>
   </bean>

  <!-- ASCII profile bean -->
   <bean id ="ASCIIProfile" class ="org.jhove2.module.format.utf8.ascii.ASCII" scope="prototype">
      <constructor-arg ref="ASCIIFormat"/> <!-- format -->
   </bean>
   
 <!-- ASCII Format bean -->
	<bean id="ASCIIFormat" class="org.jhove2.core.Format">
      <constructor-arg type="java.lang.String" value="ASCII"/>                       <!-- name  -->
      <constructor-arg ref="identifierASCIIFormat"/>                                 <!-- identifier -->
      <constructor-arg type="org.jhove2.core.Format$Type" value="Format"/>           <!-- type  -->
      <constructor-arg type="org.jhove2.core.Format$Ambiguity" value="Unambiguous"/> <!-- ambiguity  -->
	<property name="aliasIdentifier" ref="aliasIdASCIICharacter"/>
	</bean>
	
   <!-- ASCII Format identifier -->  
   <bean id="identifierASCIIFormat" class="org.jhove2.core.Identifier" >
      <constructor-arg type="java.lang.String" value="info:jhove2/format/ascii"/> <!--  value  -->
   </bean>
   
   <!-- ASCII alias identifiers -->
   <bean id="aliasIdASCIICharacter" class="org.jhove2.core.Identifier" >
      <constructor-arg type="java.lang.String" value="text/plain; charset=&quot;US-ASCII&quot;"/>
      <constructor-arg type="org.jhove2.core.Identifier$Namespace" value="Charset"/>
   </bean>
   
</beans>